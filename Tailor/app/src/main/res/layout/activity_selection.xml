<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="android.blaze.com.tailor.content.Selection">
    <RelativeLayout
        android:id="@+id/testLayout"
        android:layout_width="match_parent"
        android:layout_height="1000px"
        android:background="@color/brown"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:background="@color/brown"
            android:text="Hello"/>


        </RelativeLayout>
    <ImageView
        android:layout_below="@id/testLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/homebar"
        android:onClick="collapseButton"/>
    <Button
        android:id="@+id/btExpand"
        android:layout_below="@id/testLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="expand"
        android:visibility="gone"
        android:onClick="expandButton"/>
    <Button
        android:layout_toRightOf="@+id/btExpand"
        android:layout_below="@id/testLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="collaspe"
        android:onClick="collapseButton"/>


</RelativeLayout>
